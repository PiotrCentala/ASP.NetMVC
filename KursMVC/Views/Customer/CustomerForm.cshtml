@model KursMVC.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customer"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })

    </div>
    <div class="form-group">
        <label for="Birthday">Date of Birth</label>
        @Html.TextBoxFor(m => m.Customer.Birthday, "{0:d MMM yyyy}", new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MembershipTypes)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class = "form-control" })

    </div>
    <div class="form-check">
        <label>


            @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewstletter, new { @class = "form-check-input" }) Subsribed to Newsletter

        </label>
    </div>

    @Html.HiddenFor(m => m.Customer.Id);

    <button type="submit" , class="btn btn-primary">
        Save
    </button>
}